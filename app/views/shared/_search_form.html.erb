<h3>Filter</h3>
<script type="text/javascript">
$(document).ready(function(){ 
    $('#myTab a[href="#title"]').tab('show');
    $("#myTab a").click(function(e){
      e.preventDefault();
      $(this).tab('show');
    });
});
</script>



  <div class="col-md-4 padding-none">
    <ul class="nav nav-pills nav-stacked" id="myTab">
        <li><a href="#title">Title</a></li>
        <li><a href="#categories">Categories</a></li>
        <li><a href="#logistics">Logistics</a></li>
        <li><a href="#time">Time</a></li>
    </ul>
    <br/>
  </div>
  <div class="col-md-8 padding-left-right">
    <div class="tab-content">

        <div id="title" class="tab-pane fade">
         <%=label_tag("Semester") %>
               <%= select_tag 'semester', options_for_select(Semester.semesters, Semester.current_semester(params[:semester])), :class => 'form-control selectpicker'   %>

          <%= label_tag("SEARCH") %>
          <input type="text" class="form-control" placeholder="By title" id=<%= text_field_tag('search_field') %> </input>
        </div>

        <div id="categories" class="tab-pane fade">
     
          <%= label_tag("CATEGORIES") %>
               <%= select_tag 'category', options_for_select(Category.categories, params[:category]), :multiple => true, :class => 'form-control selectpicker' %>

          <%=label_tag("Sort") %>
               <%= select_tag 'sort', options_for_select(Course.sorting.keys, params[:sort]), :include_blank => true, :class => 'form-control selectpicker'   %>
        </div>

        <div id="logistics" class="tab-pane fade">
      
          <%= label_tag("Units:") %>
          <%= select_tag 'units', options_for_select(Course.units, params[:units]), :multiple => true, :class => 'form-control selectpicker' %>
          
          <br/><br/>
          <%= label_tag("Status:") %>
          <%= select_tag 'status', options_for_select(Section.statuses, params[:status]), :multiple => true, :class => 'form-control selectpicker'%>
        </div>

        <div id="time" class="tab-pane fade">
        
          
            <%= label_tag("Date:") %>
            <%= select_tag 'days', options_for_select(Section.all_days, params[:days]), :multiple => true, :class => 'form-control selectpicker' %>

         
          <br/><br/>
          
            <%= label_tag ("Starting Time") %>
            <%= select_tag 'start_time', options_for_select(Section.all_times, params[:start_time]), :include_blank => true, :class => 'form-control selectpicker' %>
            <br/><br/>


            <%= label_tag ("Ending Time") %>
            <%= select_tag 'end_time', options_for_select(Section.all_times, params[:end_time]), :include_blank => true, :class => 'form-control selectpicker' %>
        
        </div>
      
    </div>
    <br/>
  </div>
  
    <%= submit_tag "Filter", :class=>"btn btn-primary pull-right center" %>

<br/>

