<%= label_tag("Search:") %>
  <input type="text" class="form-control" placeholder="By title" id=<%= text_field_tag(:search_field) %> </input>
  <%= label_tag("Units:") %>
  <% Course.units.each do |unit| %>
    <%= check_box_tag "units[#{unit}]", 1, params[:units] && params[:units].include?(unit) , id: unit %>
    <%= unit%>
  <% end %>
  <br></br>
  <%= label_tag("Categories:") %>
  <%= select_tag 'category', options_for_select(['Select'] + Course.categories, params[:category]), :class => 'form-control'%>
  <br></br>
  <%= label_tag("Date:") %>
  <% Section_time.all_days.each do |day| %>
    <%= check_box_tag "section_time[days[#{day}]]", 1, params[:section_time] && params[:section_time][:days] && params[:section_time][:days].include?(day), id: day %>
    <%= day%>
  <% end %>
  <br></br>
  <%= label_tag ("Start after:") %>
  <%= select_tag 'section_time[start_time]', options_for_select(Section_time.all_times, "-Select Time-") %>
  <%= label_tag ("Ends before:") %>
  <%= select_tag 'section_time[end_time]', options_for_select(Section_time.all_times, "-Select Time-") %>
  <%= label_tag("Status:") %>
  <%= select_tag 'status', options_for_select(['Select'] + Course.statuses, params[:status]), :class => 'form-control'%>
  <%= submit_tag "Search", :class=>"btn btn-primary" %>
