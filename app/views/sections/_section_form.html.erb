
<%= form_for(@section, :url => course_sections_path(@course)) do |f| %>
  <div class="box">
    <%= field_set_tag 'GENERAL INFO' do %>
      <div><%= f.label :section_title, 'Section Title (e.g. "Section 1" or "Beginner"): ', :class => 'field' %><%= f.text_field :section_title, :size => 35 %></div><br/>
      <div><%= f.label :ccn_ld, 'CCN (Lower Division): ', :class => 'field'  %><%= f.text_field :ccn_ld, :size => 8 %></div><br/>
      <div><%= f.label :ccn_ud, 'CCN (Upper Division): ', :class => 'field'  %><%= f.text_field :ccn_ud, :size => 8 %></div><br/>
      <div><%= f.check_box(:ccn_publish) %><%= f.label(:ccn_publish, "Yes, I want to publish my CCNs! (You will probably want to leave this unchecked)", :class => 'field' ) %></div><br/><br/>
      <div><%= f.label :size, 'Class Size (Estimate if unsure): ', :class => 'field'  %><%= f.text_field :size, :size => 5 %></div><br/>
      <div><%= f.check_box(:status) %><%= f.label(:status, "Yes, this class is now FULL", :class => 'field' ) %></div><br/>
    <% end %>
  </div><br/>

  <div class="box">
    <%= field_set_tag 'WHEN AND WHERE IS IT?' do %>
      <div><%= f.label :first_day, 'First Day of Class (In MM/DD/YYYY format, like this: 11/29/2012): ', :class => 'field'  %><%= f.text_field :first_day, :size => 20 %></div><br/>
      <div><%= f.label :location, 'Where is it? (Like this: 320 Eshleman or 216 Dwinelle): ', :class => 'field'  %><%= f.text_field :location, :size => 15 %></div><br/>
      <b>Class every...</b>
      <table class="std2">
        <tr>
          <td><%= check_box_tag(:monday) %></td>
          <td><%= check_box_tag(:tuesday) %></td>
          <td><%= check_box_tag(:wednesday) %></td>
          <td><%= check_box_tag(:thursday) %></td>
          <td><%= check_box_tag(:friday) %></td>
        </tr>
        <tr>
          <td>Monday</td>
          <td>Tuesday</td>
          <td>Wednesday</td>
          <td>Thursday</td>
          <td>Friday</td>
        </tr>
      </table><br/>
      <div><%= f.label :start_time, 'Start from: ', :class => 'field'  %><%= f.time_select :start_time, {:minute_step => 15, :ampm => true, :ignore_date => true} %></div><br/>
      <div><%= f.label :end_time, 'Ends At: ', :class => 'field'  %><%= f.time_select :end_time, {:minute_step => 15, :ampm => true, :ignore_date => true} %></div><br/>

    <% end %>
  </div><br/>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>