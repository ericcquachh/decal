<% if flash[:error] %>
  <div id="error_explanation">
    <%= flash.now[:error]%>
  </div>
<% end %>

<%= form_for(@course) do |f| %>
  <% if !@course.errors.empty? %>
    <div id="error_explanation">
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>
  <%= render "courses/steps/page#{@course.current_step}", f: f %>
  <p><%= f.submit "Continue" %></p>
  <p><%= f.submit "Back", :name => "previous_button" unless @course.first_step? %></p>

<% end %>

