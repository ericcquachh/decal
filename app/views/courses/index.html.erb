<h1>Listing Courses</h1>
<p><%= @test %></p>
<p><%= @test2 %></p>
<%= form_for(courses_path, method: :get, id: 'units_form') do -%>
  <p><b>Units</b></p>
    <% @all_units.each do |unit| %>
        <%= check_box_tag 'checked_units[]', unit, @selected[unit], id: 'unit_#{unit}' -%>
        <%= h unit -%>
    <% end %>

  <%= submit_tag "Search" %>
<% end %>


<table class="table table-striped">

  <%= form_tag("/courses", method: "post") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>

  <tr>
    <th><%= link_to 'Course Title', courses_path(:title => "title") %></th>
    <th>Category</th>
    <th>Units</th>
     <th>Days</th>
    <th>Time</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.title %></td>
    <td><%= course.category %></td>
    <td><%= course.units %></td>
    <td><%= course.days %></td>
    <td><%= course.time %></td>
    <td><%= course.status %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

