<h1>Listing Courses</h1>
<%= form_for(courses_path, method: :get, id: 'units_form') do %>
  <%= label_tag("Search for:") %>
  <%= text_field_tag(:search_field) %>
  <%= label_tag("Units:") %>
  <% @all[:units].each do |unit| %>
    <%= check_box_tag "units[#{unit}]", 1, session[:units[unit]] || !session[:units], id: unit %>
    <%= unit%>
  <% end %>
  <%= label_tag("Categories:") %>
  <%= select_tag 'category', options_for_select(@all[:category], session[:category])%>
  <%= label_tag("Days:") %>
  <% @all[:days].each do |day| %>
    <%= check_box_tag "days[#{day}]", 1, session[:days[day]] || !session[:days], id: day %>
    <%= day%>
  <% end %>
  <%= label_tag("Course Status:") %>
  <%= select_tag 'status', options_for_select(@all[:status], session[:status])%>
  <%= submit_tag "Search" %>
<% end %>


<table class="table table-striped">
  <tr>
    <th><%= link_to 'Course Title', courses_path(:title => "title") %></th>
    <th>Category</th>
    <th>Units</th>
     <th>Days</th>
    <th>Time</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.title %></td>
    <td><%= course.category %></td>
    <td><%= course.units %></td>
    <td><%= course.days %></td>
    <td><%= course.time %></td>
    <td><%= course.status %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

