<%= form_tag(controller: "existing_courses", action: "index", method: "post") do %>
	<table class="table table-hover">
		<tr>
			<th>Courses</th>
			<th>Category</th>
			<th>Units</th>
			<th>Days</th>
			<th>Time</th>
			<th>Status</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

	<% @courses.each do |course| %>
	<tr>
		<% if current_user.try(:facilitator?) %>
			<td><%= link_to course.title, course, {:style=>'font-size: 120%;'} %></td>
			<td><%= course.category %></td>
			<td><%= course.units %></td>
			<td><%= course.days %></td>
			<td><%= course.time %></td>
			<td><%= course.status %></td>
			<td><%= check_box_tag(course.title) %></td>
		<% end %>
	</tr>
	<% end %>


	</table>
	<%= submit_tag("Facilitate These Courses",:class=>'btn btn-primary')%>
<% end %>
