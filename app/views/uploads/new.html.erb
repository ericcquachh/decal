<% if !@upload.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @upload.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="center70">
  <h1>File Upload</h1>
  <div class="box">
    <%= form_for(@upload, html: { multipart: true }, url: course_uploads_path(@course)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, :class=>'form-control' %><br/>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %><br/>
      <div><%= f.check_box(:syl) %><%= f.label(:syl, "This is my syllabus for my course request" ) %></div></br>
      <div><%= f.check_box(:cpf) %><%= f.label(:cpf, "This is my CPF for my course request") %></div></br>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>